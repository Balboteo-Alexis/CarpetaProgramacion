 * Descripción: Pedimos varios valores y hacemos pequeños calculos finalmente mostramos los datos y con un if aplicamos una condicion final
 * Autor: Alexis Balboteo
 * Fecha: 08/10/2025
 */


package ejercicio4;
import java.util.Scanner;
public class Ejercicio4 {

	public static void main(String[] args)
	{
		Scanner teclado = new Scanner(System.in);
		
		String name, surname;
		double importe1, importe2, importe3, importe4, importeTotal, media;
		
		System.out.print("Nombre: ");
		name = teclado.nextLine();
		System.out.print("Apellidos: ");
		surname = teclado.nextLine();
		System.out.print("Importe gastado 1: ");
		importe1 = teclado.nextDouble();
		System.out.print("Importe gastado 2: ");
		importe2 = teclado.nextDouble();
		System.out.print("Importe gastado 3: ");
		importe3 = teclado.nextDouble();
		System.out.print("Importe gastado 4: ");
		importe4 = teclado.nextDouble();
		
		
		importeTotal = importe1 + importe2 + importe3 + importe4;
		media = importeTotal/4;
		
		
		System.out.println("\n\nNombre: "+name+"\nApellidos: "+ surname);
		System.out.println("Importe Gastado1: "+importe1+"\nImporte Gastado2: "+importe2+"\nImporte Gastado3: "+importe3+"\nImporte Gastado4: "+importe4);
		
		
		System.out.println("\nImporte Medio: "+media);
		
		
		
		if(importeTotal >=300)
		{
			System.out.print("\nGENIAL, sus compras han alcanzado los 300 euros este mes, dispone de un descuento de 50$. ");
		}
		else
		{
			System.out.print("\nLo sentimos pero sus compras no han alcanzado los 300 euros este mes, no dispone de descuento. ");
		}
		
		
		
		
		
		
		
		
		teclado.close();
	}

}
